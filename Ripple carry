module ripple_carry_01(
    input [3:0]a,b,
    output [3:0]sum,
    output carry
    );
    wire [3:0]c;
    assign c[0]=1'b0;
    assign c[1]=a[0]&b[0]|b[0]&c[0]|c[0]&a[0];
    assign c[2]=a[1]&b[1]|b[1]&c[1]|c[1]&a[1];
    assign c[3]=a[2]&b[2]|b[2]&c[2]|c[2]&a[2];
    assign sum[3:0]=a[3:0]^b[3:0]^c[3:0];
    assign carry=a[3]&b[3]|b[3]&c[3]|c[3]&a[3];
endmodule
